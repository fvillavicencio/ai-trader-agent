# Deployment environment variables
# IMPORTANT: This is a template file. Do NOT store actual API keys here.
# Replace the placeholder values with your actual keys during deployment.

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=pplx-7b-online

# News API Configuration
NEWS_API_KEY=your_news_api_key_here

# RapidAPI Configuration (for InsightSentry)
RAPID_API_KEY=your_rapid_api_key_here
RAPID_API_HOST=insightsentry.p.rapidapi.com

# Google Cloud Function Configuration
GCP_PROJECT_ID=your_gcp_project_id_here
GCP_REGION=us-central1
FUNCTION_NAME=geopoliticalRiskAPI

# AWS Configuration (for Lambda fallback)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-2
AWS_LAMBDA_FUNCTION=geopolitical-risk-analyzer

# API Provider Configuration
DEFAULT_API_PROVIDER=openai
# Valid options: openai, perplexity

# Cache Configuration
CACHE_DURATION_MINUTES=15

# Logging Configuration
LOG_LEVEL=info
# Valid options: debug, info, warn, error

# RSS Feed Sources
RSS_FEEDS=https://www.reuters.com/world/rss,https://www.ft.com/world?format=rss,https://feeds.bbci.co.uk/news/world/rss.xml
