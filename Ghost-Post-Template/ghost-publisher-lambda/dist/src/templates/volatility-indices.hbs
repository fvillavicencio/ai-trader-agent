<div class="volatility-section">
  <h2 class="volatility-title">Volatility Indices</h2>
  
  <div class="volatility-list">
    {{#each volatilityIndices}}
      <div class="volatility-item">
        <div class="volatility-name">{{name}}</div>
        <div class="volatility-value">{{value}}</div>
        <div class="volatility-trend {{toLowerCase trend}}">
          {{#if (stringContains trend "Rising")}}
            ↑
          {{else}}
            ↓
          {{/if}}
          {{trend}}
        </div>
      </div>
    {{/each}}
  </div>
  
  <div class="volatility-source">
    Source: <a href="{{sourceUrl}}">{{source}}</a>, as of {{asOf}}
  </div>
</div>
