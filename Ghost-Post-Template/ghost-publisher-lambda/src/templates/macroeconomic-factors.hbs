<div class="section">
  <h2>Macroeconomic Factors</h2>
  
  {{#if macroeconomicFactors.treasuryYields}}
    <div class="subsection">
      <div class="subsection-title">Treasury Yields</div>
      <div class="yields-row">
        {{#each macroeconomicFactors.treasuryYields.yields}}
          <div class="yields-cell">
            <div class="yield-term">{{term}}</div>
            <div class="yield-value">{{formatPercent yield}}</div>
            <div class="yield-change">(Change: {{formatPercent change}})</div>
          </div>
        {{/each}}
      </div>

      {{#if macroeconomicFactors.treasuryYields.yieldCurve}}
        <div class="yield-curve-analysis">
          <div class="yield-curve-status">Yield Curve: {{macroeconomicFactors.treasuryYields.yieldCurve.status}}</div>
          <div class="yield-curve-description">{{macroeconomicFactors.treasuryYields.yieldCurve.analysis}}</div>
        </div>
      {{/if}}
      
      <div class="data-source">
        Source: <a href="{{macroeconomicFactors.treasuryYields.sourceUrl}}">{{macroeconomicFactors.treasuryYields.source}}</a>, 
        as of {{formatDate macroeconomicFactors.treasuryYields.lastUpdated}}
      </div>
    </div>
  {{/if}}
  
  {{#if macroeconomicFactors.fedPolicy}}
    <div class="subsection">
      <div class="subsection-title">Federal Reserve Policy</div>
      <div class="fed-policy-container">
        <div class="fed-guidance">{{macroeconomicFactors.fedPolicy.forwardGuidance}}</div>
        
        <div class="fed-details">
          <div class="fed-detail-item">
            <span class="fed-detail-label">Current Rate:</span>
            <span class="fed-detail-value">{{macroeconomicFactors.fedPolicy.currentRate}}</span>
          </div>
          <div class="fed-detail-item">
            <span class="fed-detail-label">Next Meeting:</span>
            <span class="fed-detail-value">{{macroeconomicFactors.fedPolicy.nextMeeting}}</span>
          </div>
          
          {{#if macroeconomicFactors.fedPolicy.probabilities}}
            <div class="fed-probabilities">
              <div class="fed-probabilities-title">Rate Change Probabilities:</div>
              <div class="probabilities-container">
                {{#each macroeconomicFactors.fedPolicy.probabilities}}
                  <div class="probability-item">
                    <span class="probability-scenario">{{@key}}:</span>
                    <span class="probability-value">{{this}}%</span>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  {{/if}}
  
  {{#if macroeconomicFactors.inflation}}
    <div class="subsection">
      <div class="subsection-title">Inflation Data</div>
      <div class="inflation-container">
        <div class="inflation-card">
          <div class="inflation-title">Consumer Price Index (CPI)</div>
          <div class="inflation-metrics">
            <div class="inflation-metric">
              <span class="inflation-label">Headline:</span>
              <span class="inflation-value">{{formatPercent macroeconomicFactors.inflation.cpi.headline}}</span>
            </div>
            <div class="inflation-metric">
              <span class="inflation-label">Core:</span>
              <span class="inflation-value">{{formatPercent macroeconomicFactors.inflation.cpi.core}}</span>
            </div>
          </div>
        </div>
        
        <div class="inflation-card">
          <div class="inflation-title">Personal Consumption Expenditures (PCE)</div>
          <div class="inflation-metrics">
            <div class="inflation-metric">
              <span class="inflation-label">Headline:</span>
              <span class="inflation-value">{{formatPercent macroeconomicFactors.inflation.pce.headline}}</span>
            </div>
            <div class="inflation-metric">
              <span class="inflation-label">Core:</span>
              <span class="inflation-value">{{formatPercent macroeconomicFactors.inflation.pce.core}}</span>
            </div>
          </div>
        </div>
        
        {{#if macroeconomicFactors.inflation.trend}}
          <div class="inflation-trend">
            <div class="trend-title">Inflation Trend Analysis</div>
            <div class="trend-grid">
              <div class="trend-column">
                <div class="trend-header">Trend</div>
                <div class="trend-value {{macroeconomicFactors.inflation.trend.direction}}">
                  {{macroeconomicFactors.inflation.trend.direction}}
                </div>
              </div>
              <div class="trend-column">
                <div class="trend-header">Outlook</div>
                <div class="trend-value">
                  {{macroeconomicFactors.inflation.trend.outlook}}
                </div>
              </div>
              <div class="trend-column">
                <div class="trend-header">Market Impact</div>
                <div class="trend-value">
                  {{macroeconomicFactors.inflation.trend.marketImpact}}
                </div>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
      
      <div class="data-source">
        Source: <a href="{{macroeconomicFactors.inflation.sourceUrl}}">{{macroeconomicFactors.inflation.source}}</a>, 
        as of {{formatDate macroeconomicFactors.inflation.lastUpdated}}
      </div>
    </div>
  {{/if}}
  
  {{#if macroeconomicFactors.geopoliticalRisks}}
    <div class="subsection">
      <div class="subsection-title">Geopolitical Risks</div>
      
      {{#if macroeconomicFactors.geopoliticalRisks.global}}
        <div class="global-overview">
          <div class="overview-title">Global Overview</div>
          <div class="overview-content">{{macroeconomicFactors.geopoliticalRisks.global}}</div>
        </div>
      {{/if}}
      
      {{#if macroeconomicFactors.geopoliticalRisks.risks.length}}
        <div class="risks-container">
          {{#each macroeconomicFactors.geopoliticalRisks.risks}}
            <div class="risk-card">
              <div class="risk-content">
                <div class="risk-name">{{name}}</div>
                <div class="risk-description">{{description}}</div>
                <div class="risk-region">Region: {{region}}</div>
                <div class="risk-source">Source: {{source}}</div>
              </div>
              <div class="risk-impact" style="background-color: {{getRiskColor impactLevel}};">
                <div class="impact-level">{{impactLevel}}</div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/if}}
      
      <div class="data-source">
        Source: <a href="{{macroeconomicFactors.geopoliticalRisks.sourceUrl}}">{{macroeconomicFactors.geopoliticalRisks.source}}</a>, 
        as of {{formatDate macroeconomicFactors.geopoliticalRisks.lastUpdated}}
      </div>
    </div>
  {{/if}}
</div>
