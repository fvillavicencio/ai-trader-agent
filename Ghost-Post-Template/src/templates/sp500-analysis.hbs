{{#if sp500}}
<div class="sp500-snapshot-card">
  <h3 class="sp500-snapshot-title">S&P 500 Market Snapshot</h3>
  
  <!-- Top row with key metrics -->
  <div class="sp500-snapshot-content">
    <!-- Index Level -->
    <div class="sp500-snapshot-item index-level">
      <div class="big-number">{{sp500.indexLevel}}</div>
      <div class="label">Current Index Level</div>
    </div>
    
    <!-- P/E Ratio with EPS -->
    <div class="sp500-snapshot-item pe-ratio-container">
      <div class="pe-ratio">
        <div class="big-number highlight">{{sp500.trailingPE.current}}×</div>
        <div class="label">Trailing P/E (TTM)</div>
        <div class="context">
          <span class="avg-value">5-yr avg <strong>{{sp500.trailingPE.fiveYearAvg}}×</strong></span> 
          <span class="separator">•</span> 
          <span class="avg-value">10-yr avg <strong>{{sp500.trailingPE.tenYearAvg}}×</strong></span>
        </div>
      </div>
      <div class="eps-value">
        <div class="eps-number">$200.27</div>
        <div class="label">Trailing EPS (TTM)</div>
      </div>
    </div>
  </div>
  
  <!-- Second row with chart -->
  <div class="sp500-chart-container">
    <div class="chart-title">P/E Ratio Trend (5-Year History)</div>
    <div class="chart-wrapper">
      <img src="https://image-charts.com/chart?cht=lc&chd=t:22.5,23.7,25.2,26.6,24.8,24.7&chxl=0:|2020|2021|2022|2023|2024|Current&chxt=x,y&chs=600x250&chf=bg,s,FFFFFF&chco=38a169&chm=o,38a169,0,-1,6&chds=20,30&chxr=1,20,30,2&chg=10,10,1,1,0,0,EEEEEE&chls=2" alt="P/E ratio trend over 5 years" class="full-width-chart">
    </div>
  </div>
  
  <!-- Footer with source info -->
  <div class="sp500-snapshot-footer">
    <div class="source-info">
      Source: <a href="{{sp500.sourceUrl}}" target="_blank">{{sp500.source}}</a>, as of {{sp500.asOf}}
    </div>
  </div>
</div>
{{/if}}
